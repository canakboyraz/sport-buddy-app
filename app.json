{
  "expo": {
    "name": "Sport Buddy",
    "slug": "sport-buddy-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200ee"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "sportbuddy",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sportbuddy.app2",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Spor etkinliklerinizin konumunu belirlemek için konum erişimine ihtiyacımız var.",
        "NSCameraUsageDescription": "Profil fotoğrafı eklemek için kamera erişimine ihtiyacımız var.",
        "NSPhotoLibraryUsageDescription": "Profil fotoğrafı seçmek için fotoğraf kütüphanesine erişim gerekiyor.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.sportbuddy.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#6200ee"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Spor etkinliklerinizin konumunu belirlemek için konum erişimine ihtiyacımız var."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#6200ee"
        }
      ],
      "expo-asset",
      "expo-secure-store",
      "expo-apple-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "b8d0e10c-6b76-4ceb-bf2c-f7095ac553de"
      }
    }
  }
}
